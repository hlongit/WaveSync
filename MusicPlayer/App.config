<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<!-- Database connection strings section -->
	<connectionStrings>
		<!-- Main database connection for the WaveSync application -->
		<add name="WaveSyncDB"
			 connectionString="Data Source=(localdb)\MSSQLLocalDB; 
                         AttachDbFilename=|DataDirectory|\Data\WaveSyncDB.mdf;
                         Integrated Security=True;
                         Connect Timeout=30;
                         MultipleActiveResultSets=True;
                         App=WaveSync"
			 providerName="System.Data.SqlClient" />
		<!-- Use SQL Server LocalDB (lightweight developer version of SQL Server) -->
		<!-- Path to the physical .mdf database file.
              |DataDirectory| is a dynamic path resolved at runtime:
                - During development: bin\Debug\Data or bin\Release\Data
                - After ClickOnce/local install: User's AppData folder
              The .mdf file will be automatically attached on first use. -->
		<!-- Use Windows Authentication (current logged-in user) - no password needed -->
		<!-- Wait up to 30 seconds when connecting (helps on slow machines) -->
		<!-- Allows multiple active queries on the same connection
              (required by Entity Framework in many scenarios) -->
		<!-- Friendly name shown in SQL Server Profiler / Activity Monitor -->
		<!-- HOW TO USE IN CODE:
         string conn = ConfigurationManager.ConnectionStrings["WaveSyncDB"].ConnectionString;
         
         If using Entity Framework:
           - Name your DbContext "WaveSyncDBContext"
           - OR pass the connection string explicitly in the constructor
           EF will automatically pick up this connection string if names match. -->
	</connectionStrings>
</configuration>
